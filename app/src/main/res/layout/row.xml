<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.alorma.timeline.RoundTimelineView
        android:layout_width="?android:listPreferredItemHeight"
        android:layout_height="?android:listPreferredItemHeight"
        app:lineColor="#33b5e5"
        app:lineWidth="6dp"
        app:middleColor="#ff406fe5"
        app:middleSize="10"
        app:firstColor="#ff946885"
        app:firstSize="20"
        app:lastColor="#ffe5b253"
        app:lastSize="18"
        app:timeline_type="line"
        android:id="@+id/timeline" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="?android:listPreferredItemHeight"
        android:id="@+id/textView"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:textSize="24sp" />

</LinearLayout>
