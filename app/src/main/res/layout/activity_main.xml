<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?android:listPreferredItemHeight"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:gravity="center_horizontal">

        <com.alorma.timeline.RoundTimelineView
            android:layout_width="?android:listPreferredItemHeight"
            android:layout_height="?android:listPreferredItemHeight"
            app:timeline_type="line"
            android:id="@+id/timeline1" />

        <com.alorma.timeline.RoundTimelineView
            android:layout_width="?android:listPreferredItemHeight"
            android:layout_height="?android:listPreferredItemHeight"
            app:timeline_type="start"
            android:id="@+id/timeline2" />

        <com.alorma.timeline.RoundTimelineView
            android:layout_width="?android:listPreferredItemHeight"
            android:layout_height="?android:listPreferredItemHeight"
            app:timeline_type="middle"
            android:id="@+id/timeline3" />

        <com.alorma.timeline.RoundTimelineView
            android:layout_width="?android:listPreferredItemHeight"
            android:layout_height="?android:listPreferredItemHeight"
            app:timeline_type="middle"
            app:timeline_alignment="start"
            android:id="@+id/timeline3_align_top" />

        <com.alorma.timeline.RoundTimelineView
            android:layout_width="?android:listPreferredItemHeight"
            android:layout_height="?android:listPreferredItemHeight"
            app:timeline_type="middle"
            app:timeline_alignment="end"
            android:id="@+id/timeline3_align_bottom" />

        <com.alorma.timeline.RoundTimelineView
            android:layout_width="?android:listPreferredItemHeight"
            android:layout_height="?android:listPreferredItemHeight"
            app:timeline_type="end"
            android:id="@+id/timeline4" />

    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:layout_below="@+id/linearLayout" />


</RelativeLayout>
