<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TimelineView">
        <attr name="timeline_lineWidth" format="dimension"/>
        <attr name="timeline_lineColor" format="color"/>

        <attr name="timeline_middleSize" format="float"/>
        <attr name="timeline_middleColor" format="color"/>

        <attr name="timeline_startSize" format="float"/>
        <attr name="timeline_startColor" format="color"/>

        <attr name="timeline_endSize" format="float"/>
        <attr name="timeline_endColor" format="color"/>

        <attr name="timeline_type" format="enum">
            <enum name="start" value="-1"/>
            <enum name="middle" value="0"/>
            <enum name="line" value="1"/>
            <enum name="end" value="2"/>
        </attr>

        <attr name="timeline_alignment" format="enum">
            <enum name="start" value="-1"/>
            <enum name="middle" value="0"/>
            <enum name="end" value="1"/>
        </attr>

        <attr name="timeline_lineStyle" format="enum">
            <enum name="dashed" value="-1"/>
            <enum name="linear" value="0"/>
        </attr>

        <attr name="timeline_internalColor" format="color"/>
        <attr name="timeline_internalPadding" format="dimension"/>

        <attr name="timeline_drawInternal" format="boolean"/>
    </declare-styleable>
</resources>
